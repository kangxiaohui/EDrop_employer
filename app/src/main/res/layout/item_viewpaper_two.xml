<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:layout_width="675px"
            android:layout_height="682px"
            android:layout_centerInParent="true"
            android:src="@drawable/start22" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_baohu_one"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_10"
            android:gravity="center"
            android:text="简  易"
            android:textColor="#000"
            android:textSize="60px" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50"
            android:layout_below="@+id/tv_baohu_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_80"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="61px"
                android:layout_height="61px"
                android:layout_gravity="center"
                android:src="@drawable/circle" />

            <ImageView
                android:layout_width="61px"
                android:layout_height="61px"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginRight="@dimen/size_15"
                android:src="@drawable/dots" />

            <ImageView
                android:layout_width="61px"
                android:layout_height="61px"
                android:layout_gravity="center"
                android:src="@drawable/circle" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>