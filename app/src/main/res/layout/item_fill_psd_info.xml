<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/register_shape"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginTop="5dp"
            android:src="@drawable/pwdimg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginTop="-5dp"
            android:text="|"
            android:textColor="#8a8a8a"
            android:textSize="@dimen/size_30" />

        <EditText
            android:id="@+id/et_newPsd"
            android:layout_width="230dp"
            android:maxLength="6"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:background="@null"
            android:inputType="numberPassword"
            android:hint="请输入新密码(6位)"
            android:textSize="@dimen/size_18" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:layout_width="300dp"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_10"
        android:background="@drawable/register_shape"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginTop="5dp"
            android:src="@drawable/pwdimg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginTop="-5dp"
            android:text="|"
            android:textColor="#8a8a8a"
            android:textSize="@dimen/size_30" />

        <EditText
            android:id="@+id/et_newPsd2"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:background="@null"
            android:hint="确认新密码(6位)"
            android:textSize="@dimen/size_18" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_new_ok"
        android:layout_marginTop="@dimen/size_30"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:textSize="@dimen/size_20"
        android:textColor="#fff"
        android:background="@drawable/btn_register_background"/>
</LinearLayout>