<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/size_20"
    android:background="#FAFAFA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"
        android:background="#FAFAFA"
        android:orientation="vertical">
        <!--图片-->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/rubbish_recycler" />
        <!--名称-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="可回收物"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="RECYCLABLE"
            android:textColor="@color/gray"
            android:textSize="23dp"
            android:textStyle="bold" />
        <!--简介-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="简单介绍"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:background="@color/gray"
            android:text="简单介绍"
            android:textColor="@color/gray"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:lineSpacingExtra="@dimen/size_5"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="废纸张、废塑料、废玻璃制品、废金属、费织物等适宜回收、可循环利用的生活废弃物"
            android:textColor="@color/black"
            android:textSize="20dp" />
    <!--投放要求-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="投放要求"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:background="@color/gray"
            android:text="简单介绍"
            android:textColor="@color/gray"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:lineSpacingExtra="@dimen/size_10"
            android:singleLine="false"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="1.轻投轻放\n2.清洁干燥，避免污染\n3.废纸尽量平整\n4.立体包装物请清空内容，清洁后请压扁\n5.有尖锐边角的，应包裹后投放"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>
</ScrollView>