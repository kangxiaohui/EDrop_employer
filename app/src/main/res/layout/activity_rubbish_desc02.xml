<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/size_20"
    android:background="#FAFAFA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"
        android:background="#FAFAFA"
        android:orientation="vertical">
        <!--图片-->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/rubbish_gan" />
        <!--名称-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="干垃圾/其他垃圾"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="RESIDOUAL"
            android:textColor="@color/gray"
            android:textSize="23dp"
            android:textStyle="bold" />
        <!--简介-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="简单介绍"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:background="@color/gray"
            android:text="简单介绍"
            android:textColor="@color/gray"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:lineSpacingExtra="@dimen/size_5"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="即其他垃圾，是指除可回收物、有害垃圾、湿垃圾以外的其它生活废弃物。包括砖瓦陶瓷、普通一次性电池等。"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <!--投放要求-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="投放要求"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:background="@color/gray"
            android:text="简单介绍"
            android:textColor="@color/gray"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:lineSpacingExtra="@dimen/size_10"
            android:singleLine="false"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="1.尽量沥干水分\n2.难以辨识类别的生活垃圾投入干垃圾容器内"
            android:textColor="@color/black"
            android:textSize="20dp" />
        </LinearLayout>
</ScrollView>